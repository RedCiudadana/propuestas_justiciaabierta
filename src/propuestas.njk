{% extends "src/base.njk" %}

{% block head %}
<title>Propuestas Justicia Abierta | Red Ciudadana</title>
<link rel="stylesheet" href="/css/main.css" type="text/css" />
{% endblock %}

{% block content %}

     <!-- propuestas -->
    <div class="section my-6">
        <div class="container">
            <div class="row mt-40 pt-40">
                <div class="col-lg-12">

                    <div class="my-6" style="text-align:center">
                        <h3>Propuestas Ciudadanas</h3>
                        <p>Te invitamos a filtrar y encontrar propuestas
                            ciudadanas en las siguientes áreas
                        </p>
                    </div>

                </div>

                <div class="col-lg-12"> 
                    <!--coleccion de filtros-->
                    {% for categoria in collections.categorias %}
                    <button class="filtros">{{categoria.data.title}}</button>
                    {% endfor %}
                </div>

                {% for prop in collections.propuesta %}
                    {% if prop.data.producto_encuentro == "Si" %}

                    <div class="col-lg-4 my-4">
                        <div class="cuadro_propuesta">
                            <div class="tag">
                                <button class="filtros">{{prop.data.categoria}}</button>
                            </div>
                            <div class="numero_propuesta">
                                <p>propuesta N.393</p>
                            </div>
                            <div class="contenido">
                                <h5>{{prop.data.title}}</h5>
                                <p>{{prop.data.resumen}}</p>
                            </div>
                            <div class="bottom">
                                <div class="candidaturas">
                                    <h4>4</h4>
                                    <span>candidatura(s) comprometida(s)</span>
                                </div>
                                <div class="ciudadanos">
                                    <h4>20</h4>
                                    <span>apoyo(s) ciudadano(s)</span>
                                </div>
                                <div class="botones_finales">
                                    <a href="#" class="apoyar"><i class="fa-solid fa-heart" style="margin-right:4px"></i>Apoyar</a>
                                    <a href="{{prop.url}}" class="vermas">Leer más</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% endif %}

                    {% if prop.data.producto_encuentro == "No" %}

                    <div class="col-lg-4 my-4">
                        <div class="cuadro_propuesta">
                            <div class="tag">
                                <button class="filtros">{{prop.data.categoria}}</button>
                            </div>
                            <div class="numero_propuesta">
                                <p>propuesta N.393</p>
                            </div>
                            <div class="contenido">
                                <h5>{{prop.data.title}}</h5>
                                <p>{{prop.data.resumen}}</p>
                            </div>
                            <div class="bottom">
                                <div class="candidaturas">
                                    <h4>4</h4>
                                    <span>candidatura(s) comprometida(s)</span>
                                </div>
                                <div class="ciudadanos">
                                    <h4>20</h4>
                                    <span>apoyo(s) ciudadano(s)</span>
                                </div>
                                <div class="botones_finales">
                                    <a href="#" class="apoyar"><i class="fa-solid fa-heart" style="margin-right:4px"></i>Apoyar</a>
                                    <a href="{{prop.url}}" class="vermas">Leer más</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% endif %}

                {% endfor %}

                <div class="col-lg-4 my-4">
                    <div class="cuadro_propuesta2">
                        <div class="tag">
                            <button class="filtros">salud</button>
                        </div>
                        <div class="numero_propuesta">
